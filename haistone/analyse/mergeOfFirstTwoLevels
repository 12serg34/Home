common

похоже период констант в цилах равен 6 по отношению к первому параметру в функции p

p(0, l) = (0, 1, 4, 7, 12, 16)_l + ((24, 28)_l + 12*l'') * |l/6| + 36 * S(|l/6|)
p(1, l) = (2, 3, 8, 10, 18, 22)_l + ((30, 34)_l + 12*l'') * |l/6| + 36 * S(|l/6|)
p(2, l) = (5, 9, 13, 20, 25, 35)_l + ((36, 44)_l + 12*l'') * |l/6| + 36 * S(|l/6|)
p(3, l) = (6, 11, 14, 23, 27, 38)_l + ((38, 46)_l + 12*l'') * |l/6| + 36 * S(|l/6|)
p(4, l) = (17, 21, 30, 36, 48, 54)_l + ((52, 56)_l + 12*l'') * |l/6| + 36 * S(|l/6|)
